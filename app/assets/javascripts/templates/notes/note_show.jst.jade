md-card-content
  h2.md-title(ng-bind="note.title")
  p(ng-bind="note.content")

.md-actions(layout="row" layout-align="end bottom")
  md-button(ng-bind="note.author" aria-label="{{note.author}}")
  md-button(aria-label="Delete" ng-click="deleteNote(note)") Delete

md-card-footer
  small(ng-bind="humanizeDate(note.created)")
