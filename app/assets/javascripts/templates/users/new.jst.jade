md-card.signup-card
  md-card-content
    form(name="user" layout="row" layout-align="space-between center" layout-wrap)
      md-input-container(flex="45")
        label Username
        input(type="text" ng-model="user.username" required)

      md-input-container(flex="45")
        label Password
        input(type="password" ng-model="user.password" required)

      md-input-container(flex="45")
        label First Name
        input(type="text" ng-model="user.firstName" required)

      md-input-container(flex="45")
        label Last Name
        input(type="text" ng-model="user.lastName" required)

      md-input-container(flex="45")
        label Email
        input(type="text" ng-model="user.email" required)

      md-button.md-raised.md-primary(flex="45" ng-click="signup()") Sign Up
