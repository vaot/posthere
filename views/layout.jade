doctype html
html(lang="en" ng-app="posthere")
  head
    title Posthere

    meta(charset="utf-8")
    meta(name="description" content="")
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no")

    link(rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic")
    link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-material/0.10.0/angular-material.css")
    link(rel='stylesheet' href='/assets/application.css')

  body(layout="column")
    base(href="/")

    md-toolbar(layout="row" ui-view="toolbar")
    div(layout="row" flex)
      md-sidenav.md-sidenav-left.md-whiteframe-z2(ui-view="sidenav"
                                                  layout="column"
                                                  md-component-id="left"
                                                  md-is-locked-open="$mdMedia('gt-sm')")

      #content(layout="column" flex)
        md-content.md-padding(layout="column" flex)
          div(ui-view)

    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery.shapeshift/2.0/jquery.shapeshift.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular-resource.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular-animate.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular-aria.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular-material/0.10.0/angular-material.js")

    script(type="text/javascript" src="/assets/application.js")
